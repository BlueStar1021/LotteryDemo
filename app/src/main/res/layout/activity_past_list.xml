<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_past_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lotterydemo.Activity.PastListActivity">

    <RelativeLayout
        android:id="@+id/activity_past_list_topbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/red_topbar">

        <TextView
            android:id="@+id/activity_past_list_news_name"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="activity_past_list_news_name"
            android:textSize="20dp"
            android:textColor="@color/lightTextColor"

            android:maxEms="10"
            android:maxLines="1"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/activity_past_list_return"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="返回"
            android:background="@drawable/btn_selector"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/activity_past_list_listview"
        android:layout_below="@id/activity_past_list_topbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
